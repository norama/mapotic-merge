{
    "name": "__MSG_application_name__",
    "description": "__MSG_application_description__",
    "version": "1",
    "manifest_version": 2,
    "default_locale": "en",
    "page_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Booking Map"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "https://www.mapotic.com/api/v1/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://www.booking.com/*"],
        "js": ["content.js", "api/Api.js"]
    }]
}